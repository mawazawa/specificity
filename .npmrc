# NPM Configuration for Specificity
# Ensures consistent dependency behavior across environments

# Use exact versions when installing (no ^ or ~)
save-exact=true

# Automatically prune extraneous packages
prune=true

# Engine strict mode - fail if node/npm version doesn't match
engine-strict=true

# Registry settings
registry=https://registry.npmjs.org/

# Audit settings - warn but don't block
audit=true
audit-level=moderate

# Lock file settings
package-lock=true

# Fund messages are distracting
fund=false
