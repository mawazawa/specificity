# Specificity Environment Variables
# Copy this file to .env and fill in your values

# ============================================
# REQUIRED - Supabase Configuration
# ============================================

# Supabase project URL (found in Settings > API)
VITE_SUPABASE_URL=https://your-project-ref.supabase.co

# Supabase anonymous key (found in Settings > API)
VITE_SUPABASE_ANON_KEY=your-anon-key-here

# ============================================
# OPTIONAL - Error Tracking (Sentry)
# ============================================

# Sentry DSN for error tracking (leave empty to disable)
VITE_SENTRY_DSN=

# ============================================
# EDGE FUNCTION SECRETS (set in Supabase Dashboard)
# These are NOT used in the frontend
# ============================================

# OpenRouter API Key (for AI models)
# OPENROUTER_API_KEY=sk-or-v1-xxx

# Groq API Key (fallback AI provider)
# GROQ_API_KEY=gsk_xxx

# Exa API Key (for research tool)
# EXA_API_KEY=xxx

# Stripe Secret Key (for payments)
# STRIPE_SECRET_KEY=sk_live_xxx

# Stripe Webhook Secret
# STRIPE_WEBHOOK_SECRET=whsec_xxx

# ============================================
# DEVELOPMENT ONLY
# ============================================

# Enable debug logging (true/false)
# VITE_DEBUG=false
